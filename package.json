{
  "name": "transaction-describer",
  "version": "0.0.0",
  "description": "Transaction Describer",
  "main": "src/index.ts",
  "scripts": {
    "start": "pnpm pm2",
    "dev": "pnpm crfa && nodemon src/index.ts -w . -w .env -e ts,js,mjs,json,env",
    "crfa": "test -d ./crfa-offchain-data-registry/.git || git clone https://github.com/Cardano-Fans/crfa-offchain-data-registry.git && git -C ./crfa-offchain-data-registry/ pull",
    "build": "pnpm crfa && tsc --outDir build",
    "pm2": "pnpm build && pm2-runtime start build/index.js --env production 2>/dev/null",
    "node": "ts-node src/index.ts"
  },
  "author": "Ariady Putra",
  "license": "MIT",
  "dependencies": {
    "@lucid-evolution/lucid": "0.4.27",
    "bech32": "2.0.0",
    "dotenv": "16.5.0",
    "express": "4.21.2",
    "express-rate-limit": "7.5.0",
    "node-cache": "^5.1.2",
    "pm2": "6.0.5"
  },
  "devDependencies": {
    "@types/express": "5.0.1",
    "@types/node": "22.14.1",
    "nodemon": "3.1.10",
    "ts-node": "10.9.2",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": "22.x",
    "pnpm": "10.x"
  }
}
